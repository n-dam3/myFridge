<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h2 text-gray-900 mb-4">my_Fridge</h1>
                                        <form class="user" id="formSetUserFavor">
                                            <label class="h4 mb-2 text-gray-800">추천받을 카테고리 3가지를 선택해 주세요!</label>
                                            <hr />
                                            <div>
                                                <label>
                                                    <input type="checkbox" name="category" value=0> 밑반찬
                                                </label>
                                                <label>
                                                    <input type="checkbox" name="category" value=1> 메인반찬
                                                </label>
                                                <label>
                                                    <input type="checkbox" name="category" value=2> 김치/젓갈/장류
                                                </label>
                                            </div>
                                            <div>
                                                <label>
                                                    <input type="checkbox" name="category" value=3> 국/탕
                                                </label>
                                                <label>
                                                    <input type="checkbox" name="category" value=4> 찌개
                                                </label>
                                                <label>
                                                    <input type="checkbox" name="category" value=5> 면/만두
                                                </label>
                                            </div>
                                            <div>
                                                <label>
                                                    <input type="checkbox" name="category" value=6> 밥/죽/떡
                                                </label>
                                                <label>
                                                    <input type="checkbox" name="category" value=7> 퓨전
                                                </label>
                                                <label>
                                                    <input type="checkbox" name="category" value=8> 양식
                                                </label>
                                            </div>
                                            <div>
                                                <label>
                                                    <input type="checkbox" name="category" value=9> 샐러드
                                                </label>
                                                <label>
                                                    <input type="checkbox" name="category" value=10> 양념/소스/잼
                                                </label>
                                                <label>
                                                    <input type="checkbox" name="category" value=11> 스프
                                                </label>
                                            </div>
                                            <div>
                                                <label>
                                                    <input type="checkbox" name="category" value=12> 빵
                                                </label>
                                                <label>
                                                    <input type="checkbox" name="category" value=13> 디저트
                                                </label>
                                                <label>
                                                    <input type="checkbox" name="category" value=14> 과자
                                                </label>
                                                <label>
                                                    <input type="checkbox" name="category" value=15> 차/음료/술
                                                </label>
                                            </div>
                                            <hr/>
                                            <input type="button" class="btn btn-primary btn-user btn-block" value="선택완료" onclick="javascript:checkSelection()">
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
